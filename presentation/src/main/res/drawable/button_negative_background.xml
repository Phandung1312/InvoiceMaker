                android:angle="-48"
                android:startColor="@color/stroke_negative_button"
                android:centerColor="@color/stroke_negative_button"
                android:endColor="@color/stroke_negative_button"
                android:type="linear" />
            <corners android:radius="@dimen/_25sdp"/>

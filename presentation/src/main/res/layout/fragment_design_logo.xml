<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data class="DesignLogoClass">
        <variable
            name="fragment"
            type="com.bravo.invoice.ui.create_invoice.design_logo.DesignLogoFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/view9">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_add_logo"
                android:onClick="@{() -> fragment.onAddLogo()}"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_add_image" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/iv_add_logo"
                android:orientation="vertical">

                <TextView
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add logo" />

                <TextView
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload and position your logo."
                    android:textColor="@color/more_info" />
                <RelativeLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_or"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/primaryTextSize"
                        android:textColor="@color/more_info"
                        android:fontFamily="@font/inter_tight_italic"
                        android:text="or"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginStart="@dimen/_15sdp"
                        android:onClick="@{() -> fragment.onDesignLogo()}"
                        app:cardCornerRadius="@dimen/_25sdp"
                        app:strokeColor="@color/blue_button"
                        app:strokeWidth="1dp"
                        app:cardElevation="0dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/tv_or"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/tertiaryTextSize"
                            android:textColor="@color/blue_button"
                            android:text="design a logo."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>

        <View
            android:id="@+id/view9"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/gray_line"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout5"
            tools:layout_editor_absoluteX="13dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_additional_image"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_add_image" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/iv_additional_image"
                android:orientation="vertical">

                <TextView
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add an additional image" />

                <TextView
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add accreditations, certificates or awards."
                    android:textColor="@color/more_info" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
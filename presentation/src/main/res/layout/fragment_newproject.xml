<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="NewProjectClass">

        <variable
            name="newProject"
            type="com.bravo.invoice.ui.project.NewProjectFragment" />

        <variable
            name="isVisible"
            type="Boolean" />
        <variable
            name="isVisibleView"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/viewHeaderProject"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/closeButton"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_back_right"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp" />

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/viewGroupHasData"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ingChecked"
                    android:src="@drawable/ic_checked"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/addImg"
                    android:src="@drawable/ic_plus"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/viewHeaderProject"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="Projects"
                android:id="@+id/textProjects"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/page"
                android:textSize="@dimen/_25sdp"
                android:fontFamily="@font/inter_tight_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <androidx.cardview.widget.CardView
                android:id="@+id/viewTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/page"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_2sdp"
                app:layout_constraintTop_toBottomOf="@+id/textProjects">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/viewOnlyTextActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inter_tight_medium"
                            android:text="@string/activity"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:background="#EFEFF2"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/viewActive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_bg_activity"
                            visibleView="@{!isVisibleView}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bgcircle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inter_tight_medium"
                            android:text="Active"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/viewComplete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_bg_info"
                            visibleView="@{isVisibleView}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bgcircle"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inter_tight_medium"
                            android:text="@string/complete"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/img_project"
                app:layout_constraintTop_toTopOf="parent"
                visibleView="@{isVisible}"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_135sdp"
                android:layout_marginTop="@dimen/_112sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_bg_project" />

            <RelativeLayout
                android:id="@+id/viewDoubleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                visibleView="@{isVisible}"
                android:layout_marginTop="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/img_project"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textAddCustomer"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    style="@style/medium_text_header_blue"
                    android:text="@string/create_a_new_project_n_for_this_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textDesCustomer"
                    android:layout_below="@+id/textAddCustomer"
                    android:text="@string/keep_your_documents_photos_and_contacts_for_a_project_all_together_in_one_place"
                    android:layout_width="wrap_content"
                    style="@style/primary_text"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvShowAllProject"
                visibleView="@{!isVisible}"
                tools:listitem="@layout/item_show_all_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/page"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewTab" />


            <include
                android:id="@+id/button_Create"
                android:onClick="@{() -> newProject.openAddNewProject()}"
                layout="@layout/button_blue_main"
                android:layout_width="match_parent"
                visibleView="@{isVisible}"
                app:textButton="@{`Create project`}"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/page"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page"
                android:layout_marginEnd="@dimen/page" />





        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
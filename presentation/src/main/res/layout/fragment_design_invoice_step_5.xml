<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="DesignInvoiceStep5Class">
        <variable
            name="fragment"
            type="com.bravo.invoice.ui.create_invoice.finalize_setup.DesignInvoiceStep5Fragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/background_addClient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_template"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/page"
            android:layout_marginEnd="@dimen/page"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/invoice_template"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundPrimary"
            android:paddingBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/inter_tight_semi_bold"
                android:text="You're all set!"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/largeTextSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                style="@style/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Your design and preferences will apply to all future invoices. Now it's time to get them out there."
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <include
                android:id="@+id/btn_continue"
                android:onClick="@{() -> fragment.onSendInvoice()}"
                layout="@layout/button_blue_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/page"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:textButton="@{`Send your first invoice`}" />

            <include
                android:id="@+id/btn_explore"
                android:onClick="@{() -> fragment.onExplore()}"
                layout="@layout/button_alphablue_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/page"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/btn_continue"
                app:textButton="@{`Explore the app`}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_200sdp"
            app:lottie_rawRes="@raw/congratulation"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.bravo.invoice.ui.create_invoice.design_logo.CropLogoActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/background_addClient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.create_invoice.design_logo.CropLogoActivity">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:background="@color/backgroundPrimary"
            android:paddingStart="@dimen/page"
            android:paddingEnd="@dimen/page"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:onClick="@{() -> activity.onClose()}"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close" />

            <TextView
                style="@style/top_center_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Design a logo" />

            <TextView
                style="@style/medium_blue"
                android:onClick="@{() -> activity.onNext()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Next" />
        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/page"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/page"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <com.canhub.cropper.CropImageView
                android:id="@+id/cropImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cropAutoZoomEnabled="false"
                app:cropScaleType="fitCenter" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
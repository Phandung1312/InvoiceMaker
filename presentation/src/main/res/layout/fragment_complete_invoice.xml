<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="CompleteInvoiceClass">

    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:clickable="true"
        android:orientation="vertical"
        android:background="@color/background_allfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/backgroundPrimary"
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/page"
                android:paddingEnd="@dimen/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView25"
                    style="@style/medium_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Done"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView23"
                    style="@style/medium_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title"
                    style="@style/top_center_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Invoice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView24"
                    style="@style/medium_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"

                    android:layout_centerInParent="true"
                    android:text="Mango"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="0dp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_margin="@dimen/page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_template"
                        android:scaleType="centerCrop"
                        android:src="@drawable/invoice_template"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="0dp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingStart="@dimen/page"
                        android:paddingEnd="@dimen/page"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView26"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/appCompatImageView8"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/ic_pin"

                            app:layout_constraintBottom_toBottomOf="@+id/textView26"
                            app:layout_constraintStart_toEndOf="@+id/textView26"
                            app:layout_constraintTop_toTopOf="@+id/textView26" />

                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="@dimen/_15sdp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                style="@style/primary_text"
                                android:textSize="@dimen/tertiaryTextSize"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="UNSENT" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/textView27"
                            style="@style/bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ä‘66.500"
                            android:textSize="@dimen/_20ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView26" />

                        <include
                            android:layout_marginTop="@dimen/_10sdp"
                            app:textButton = "@{`Send`}"
                            layout="@layout/button_blue_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/textView27" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="0dp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_marginStart="@dimen/page"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_marginEnd="@dimen/page"
                            style="@style/medium_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peding"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view1"
                            android:layout_marginStart="@dimen/page"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_line"
                            app:layout_constraintTop_toBottomOf="@+id/textView28"/>

                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/view1">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginStart="@dimen/page"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/appCompatImageView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_convert"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    style="@style/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="Convert to invoice"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView9"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="0dp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="0dp"
                            android:elevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginStart="@dimen/page"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/appCompatImageView12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_qr"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    style="@style/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="Show QR Code"
                                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView12"
                                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView12"
                                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView12" />
                                <View
                                    android:id="@+id/view"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    app:layout_constraintTop_toBottomOf="@id/appCompatImageView12"
                                    android:background="@color/gray_line" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="0dp"
                            android:elevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginStart="@dimen/page"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/appCompatImageView11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_currency"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    style="@style/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="Record payment"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView11"
                                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView11" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    style="@style/more_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/page"
                    android:text="MORE" />
                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="0dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                       <com.google.android.material.card.MaterialCardView
                           app:cardCornerRadius="0dp"
                           android:elevation="0dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <androidx.constraintlayout.widget.ConstraintLayout
                               android:layout_marginTop="@dimen/_10sdp"
                               android:layout_marginStart="@dimen/page"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <androidx.appcompat.widget.AppCompatImageView
                                   android:id="@+id/appCompatImageView10"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/ic_printer"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent" />

                               <TextView
                                   android:id="@+id/textView29"
                                   style="@style/primary_text"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginStart="@dimen/_10sdp"
                                   android:text="Print"
                                   app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView10"
                                   app:layout_constraintStart_toEndOf="@+id/appCompatImageView10"
                                   app:layout_constraintTop_toTopOf="@+id/appCompatImageView10" />
                               <View
                                   android:layout_marginTop="@dimen/_15sdp"
                                   android:layout_width="match_parent"
                                   android:layout_height="1dp"
                                   android:background="@color/gray_line"
                                   app:layout_constraintTop_toBottomOf="@+id/appCompatImageView10" />
                           </androidx.constraintlayout.widget.ConstraintLayout>
                       </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="0dp"
                            android:elevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/page"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/copy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_copy"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    style="@style/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="Copy"
                                    app:layout_constraintBottom_toBottomOf="@+id/copy"
                                    app:layout_constraintStart_toEndOf="@+id/copy"
                                    app:layout_constraintTop_toTopOf="@+id/copy" />
                                <View
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray_line"
                                    app:layout_constraintTop_toBottomOf="@+id/copy" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="0dp"
                            android:elevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/page"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/export"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_export"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    style="@style/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="Export as PDF"
                                    app:layout_constraintBottom_toBottomOf="@+id/export"
                                    app:layout_constraintStart_toEndOf="@+id/export"
                                    app:layout_constraintTop_toTopOf="@+id/export" />
                                <View
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray_line"
                                    app:layout_constraintTop_toBottomOf="@+id/export" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="0dp"
                            android:elevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/page"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/signature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_signature"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    style="@style/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="Sign"
                                    app:layout_constraintBottom_toBottomOf="@+id/signature"
                                    app:layout_constraintStart_toEndOf="@+id/signature"
                                    app:layout_constraintTop_toTopOf="@+id/signature" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/medium_blue"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="Mark as sent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/page"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/medium_blue"
                        android:textColor="@color/red"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="Mark as sent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
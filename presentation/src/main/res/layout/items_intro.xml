<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_intro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="428:509"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/first_introduce" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_marginTop="@dimen/_40sdp"
            android:textSize="@dimen/secondTextSize"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            style="@style/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_intro"
            tools:text="Save 10+ hours/week with simple invoice creation and customization" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
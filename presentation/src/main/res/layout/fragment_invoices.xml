<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="InvoicesClass">
        <variable
            name="fragment"
            type="com.bravo.invoice.ui.main.invoices.InvoicesFragment" />
        <variable
            name="isVisible"
            type="Boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:id="@+id/relativeLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/page"
            android:paddingEnd="@dimen/page"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/large_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoices"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_add"
                android:onClick="@{() -> fragment.onAddInvoice()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_plus" />

            <androidx.appcompat.widget.AppCompatImageView
                visibleView="@{isVisible}"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/iv_add"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_checked" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            visibleView="@{isVisible}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout7"
            tools:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/page"
                app:cardBackgroundColor="@color/background_search_view"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="26dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/ic_searchbar" />

                    <EditText
                        android:id="@+id/ed_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/search"
                        android:background="@null"
                        android:fontFamily="@font/inter_tight_medium"
                        android:hint="Search..."
                        android:textColorHint="@color/color_hint_edt"
                        android:textSize="@dimen/secondTextSize" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/gray_line"
                app:layout_constraintTop_toBottomOf="@id/search_view" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/page"
                app:cardBackgroundColor="@color/background_search_view"
                app:cardCornerRadius="@dimen/_25sdp"
                app:layout_constraintTop_toBottomOf="@+id/view10"
                tools:layout_editor_absoluteX="26dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/switch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/center_line"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btn_switch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/backgroundPrimary"
                        app:cardCornerRadius="@dimen/_25sdp"
                        app:cardElevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintWidth_percent="0.5"
                        tools:layout_editor_absoluteY="1dp" />

                    <TextView
                        android:id="@+id/textView17"
                        style="@style/primary_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:elevation="4dp"
                        android:fontFamily="@font/inter_tight_medium"
                        android:gravity="center"
                        android:onClick="@{() -> fragment.onSwitch(fragment.PENDING)}"
                        android:text="Unpaid"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/center_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView18"
                        style="@style/primary_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:elevation="4dp"
                        android:fontFamily="@font/inter_tight_medium"
                        android:gravity="center"
                        android:onClick="@{() -> fragment.onSwitch(fragment.DONE)}"
                        android:text="Paid"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/center_line"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:id="@+id/sort_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/page"
                        android:src="@drawable/ic_sorted" />

                    <TextView
                        android:id="@+id/tv_sort_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="2023 sorted by invoice date" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_sort_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/page"
                    android:src="@drawable/ic_top" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/background_search_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sort_layout">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_invoices"
                    tools:listitem="@layout/items_invoice_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@color/transparent"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/relativeLayout8">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@color/transparent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/deposit"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/ic_deposit" />

                        <TextView
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/deposit"
                            android:text="NEW: More payment methods for deposit requests" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <androidx.appcompat.widget.AppCompatImageView
                    android:elevation="@dimen/_6ssp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_close_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:elevation="0dp"
                android:id="@+id/relativeLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundPrimary"
                android:paddingStart="@dimen/page"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/page"
                android:paddingBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total (2023)" />

                <TextView
                    style="@style/bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="đ66.500" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:paddingStart="@dimen/page"
            android:paddingEnd="@dimen/page"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout7">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView5"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_100sdp"
                android:src="@drawable/background_invoices"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="180:169"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_tight_semi_bold"
                android:text="Send invoices, get paid"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/largeTextSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView5" />
            <TextView
                android:id="@+id/textView16"
                style="@style/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="This is where invoice live. Check here to see if they’ve opened or paid."
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <include
                app:textButton = "@{`Create an invoice`}"
                android:layout_marginBottom="@dimen/page"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/button_blue_main"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="26dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
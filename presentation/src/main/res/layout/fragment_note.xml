<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="AddNotes">

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#F6F7FA"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            android:id="@+id/viewHeaderNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:id="@+id/closeNotes"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/page"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_close" />

                <TextView
                    style="@style/titleHeaderMoreH2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Notes"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/page"
                    android:text="Save"
                    android:textColor="@color/blue_button"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/viewHeaderNotes"
            android:background="@color/white"
            android:layout_marginTop="@dimen/page"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp">
            <EditText
                android:id="@+id/edtNotes"
                android:background="@null"
                android:hint="@string/add_your_privates_notes"
                android:padding="@dimen/page"
                android:layout_width="match_parent"
                style="@style/titleHeaderMoreH1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

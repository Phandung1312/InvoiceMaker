<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="DesignInvoiceStep4Class">
        <variable
            name="fragment"
            type="com.bravo.invoice.ui.create_invoice.finalize_setup.DesignInvoiceStep4Fragment" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView4"
                android:layout_marginStart="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                style="@style/primary_title_set_up_screen"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/page"
                android:text="Set a default tax rate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_marginStart="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                style="@style/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We've suggested a tax rate based on your location, but you can change it here. It will automatically apply to all invoice items."
                app:layout_constraintTop_toBottomOf="@+id/textView4" />
            <TextView
                android:id="@+id/textView13"
                android:layout_marginStart="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                style="@style/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/want_to_change_it_later_or_add_other_rates_go_to_tax_amp_currency_in_settings"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView14"
                android:layout_marginTop="@dimen/page"
                android:layout_marginStart="@dimen/page"
                style="@style/more_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default tax rate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <EditText
                android:id="@+id/ed_tax_rate"
                android:inputType="number"
                android:backgroundTint="@color/backgroundPrimary"
                android:layout_marginStart="@dimen/page"
                android:fontFamily="@font/inter_tight_semi_bold"
                android:textSize="@dimen/largeTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:layout_constraintStart_toStartOf="parent"
                android:text="10.00" />

            <View
                android:layout_marginStart="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"
                app:layout_constraintTop_toBottomOf="@+id/ed_tax_rate"
                tools:layout_editor_absoluteX="26dp" />

            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/gray_line"
                app:layout_constraintTop_toBottomOf="@+id/view11" />

            <TextView
                android:id="@+id/textView15"
                style="@style/more_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/page"
                android:text="TAX TYPE"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view12" />

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:paddingStart="@dimen/page"
                android:paddingEnd="@dimen/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                tools:layout_editor_absoluteX="26dp">

                <TextView
                    android:id="@+id/exclusive"
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Exclusive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exclusive"
                    android:text="Tax is excluded from invoice item cost" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_blue_tick" />
            </RelativeLayout>

            <View
                android:id="@+id/view13"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/gray_line"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"
                tools:layout_editor_absoluteX="26dp" />

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/page"
                android:paddingEnd="@dimen/page"
                app:layout_constraintTop_toBottomOf="@+id/view13"
                tools:layout_editor_absoluteX="26dp">

                <TextView
                    android:id="@+id/inclusive"
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Inclusive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inclusive"
                    android:text="Tax is included in invoice item cost" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_blue_tick" />
            </RelativeLayout>

            <include
                android:id="@+id/btn_confirm"
                android:onClick="@{() -> fragment.onConfirm()}"
                android:layout_marginTop="@dimen/page"
                android:layout_marginStart="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                layout="@layout/button_blue_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout6"
                app:textButton="@{`Confirm`}"
                tools:layout_editor_absoluteX="26dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView3"
                android:layout_marginTop="@dimen/page"
                app:layout_constraintTop_toBottomOf="@id/btn_confirm"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardElevation="0dp"
                app:strokeColor="@color/blue_button"
                app:strokeWidth="1dp"
                android:layout_marginStart="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_tight_medium"
                    android:gravity="center"
                    android:padding="@dimen/_13sdp"
                    android:text="Use existing rate"
                    android:textColor="@color/blue_button"
                    android:textSize="@dimen/primaryTextSize" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="AddClientClass">

        <variable
            name="fragment"
            type="com.bravo.invoice.ui.client.AddClientFragment" />

        <variable
            name="viewModel"
            type="com.bravo.invoice.ui.client.ClientViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_addClient">


        <RelativeLayout
            android:id="@+id/viewHeaderAddClient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cancelTextView"
                style="@style/medium_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                android:layout_marginBottom="@dimen/page"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/addClientTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/inter_tight_bold"
                android:text="@string/add_client"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />


            <TextView
                android:id="@+id/saveTextView"
                style="@style/medium_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                android:layout_marginBottom="@dimen/page"
                android:text="@string/save"
                android:textColor="@color/color_textGray" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewHeaderAddClient">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewChooseContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="@dimen/_4sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inter_tight_bold"
                            android:text="@string/choose_from_contacts"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/_14ssp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/viewInput1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="4"
                    app:layout_constraintTop_toBottomOf="@+id/viewChooseContacts">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/billingTextView"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/page"
                            android:text="@string/billing_name" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/billingNameEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@null"
                                android:fontFamily="@font/inter_tight_light"
                                android:hint="Jane Smith"
                                android:textColorHint="@color/color_hint_edt"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:id="@+id/emptyImg"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/page"
                                android:visibility="gone"
                                android:src="@drawable/ic_empty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/billingNameEdt"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:background="@color/gray_line" />
                        </RelativeLayout>







                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/mobileTextView"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/mobile" />

                        <EditText
                            android:id="@+id/mobileEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobileTextView"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/inter_tight_light"
                            android:hint="333-333-5555"
                            android:inputType="phone"
                            android:textColorHint="@color/color_hint_edt"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/mobileEdt"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/emailTextView"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/email" />

                        <EditText
                            android:id="@+id/emailEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/emailTextView"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/inter_tight_light"
                            android:hint="henry@gmail.com"
                            android:textColorHint="@color/color_hint_edt"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/textEmptyValidEmail"
                            style="@style/primary_text"
                            android:textColor="#ff01"
                            android:layout_below="@+id/emailEdt"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/please_enter_a_valid_email_address"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/textEmptyValidEmail"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_Plus"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:src="@drawable/ic_pluscircle" />

                        <TextView
                            android:id="@+id/addAnotherEmail"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/img_Plus"
                            android:text="@string/add_another_email" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/addAnotherEmail"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/viewInput2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="4"
                    app:layout_constraintTop_toBottomOf="@+id/viewInput1">

                    <RelativeLayout
                        android:id="@+id/viewBillingAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/viewBillingAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/billingAddressTextView"
                                style="@style/primary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/billing_address" />

                            <EditText
                                android:id="@+id/billingAddressEdt"
                                style="@style/primary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/inter_tight_light"
                                android:text="@string/billing_address"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone" />
                        </LinearLayout>


                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_right" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/viewBillingAdd"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/contactTextView"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/contact" />

                        <EditText
                            android:id="@+id/contactEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/contactTextView"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/inter_tight_light"
                            android:hint="@string/jane_smith"
                            android:inputType="text"
                            android:textColorHint="@color/color_hint_edt"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/contactEdt"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/phoneTextView"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/phone" />

                        <EditText
                            android:id="@+id/phoneEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/phoneTextView"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/inter_tight_light"
                            android:hint="333-333-5555"
                            android:inputType="phone"
                            android:textColorHint="@color/color_hint_edt"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/phoneEdt"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/websiteTextView"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/website" />

                        <EditText
                            android:id="@+id/websiteEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/websiteTextView"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/inter_tight_light"
                            android:hint="www.zhihu.com"
                            android:inputType="text"
                            android:textColorHint="@color/color_hint_edt"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/websiteEdt"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/taxTextView"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/tax_number" />

                        <EditText
                            android:id="@+id/taxEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/taxTextView"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/inter_tight_light"
                            android:hint="@string/client_s_tax_number"
                            android:inputType="text"
                            android:textColorHint="@color/color_hint_edt"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/taxEdt"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/paymentText"
                            style="@style/primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:text="@string/payment_terms"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/noneText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/inter_tight_medium"
                                android:text="@string/none" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_right" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/paymentText"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/noteView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/viewInput2">

                    <EditText
                        android:id="@+id/noteEdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/inter_tight_light"
                        android:hint="@string/add_notes_about_client_they_can_t_see_these"
                        android:textColorHint="@color/color_hint_edt"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/countCharacterInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noteEdt"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_100sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:text="5000"
                        android:textSize="@dimen/_16sdp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/countCharacterInput"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/gray_line" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/page"
                    android:id="@+id/deleteView"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/noteView"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_height="@dimen/_40sdp">
                    <TextView
                        android:text="Delete"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/error_text"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
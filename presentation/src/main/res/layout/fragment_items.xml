<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="ItemsClass">
        <variable
            name="fragment"
            type="com.bravo.invoice.ui.items.ItemsFragment" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@color/background_allfragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relativeLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/page"
                    android:paddingEnd="@dimen/page">
                    <TextView
                        android:layout_centerVertical="true"
                        style="@style/medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_add"
                        android:onClick="@{() -> fragment.onAddItem()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_plus" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/iv_add"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_checked" />
                </RelativeLayout>
                <TextView
                    android:layout_marginStart="@dimen/page"
                    style="@style/large_title_text"
                    android:text="Items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/page"
                    app:cardBackgroundColor="@color/background_search_view"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/ic_searchbar" />

                        <EditText
                            android:id="@+id/ed_search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/search"
                            android:background="@null"
                            android:fontFamily="@font/inter_tight_medium"
                            android:hint="Search..."
                            android:textColorHint="@color/color_hint_edt"
                            android:textSize="@dimen/secondTextSize" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:paddingStart="@dimen/page"
                    android:paddingEnd="@dimen/page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        style="@style/primary_text"
                        android:text="Autosave new items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/swt_auto_save"
                        android:src="@drawable/ic_info" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swt_auto_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:thumb="@drawable/thumb_layer_list"
                        android:checked="true"
                        app:track="@drawable/track_background" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/backgroundPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_items"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/items_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="DesignInvoiceStep3Class">
        <variable
            name="fragment"
            type="com.bravo.invoice.ui.create_invoice.finalize_setup.DesignInvoiceStep3Fragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView4"
            android:layout_marginStart="@dimen/page"
            android:layout_marginEnd="@dimen/page"
            style="@style/primary_title_set_up_screen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/page"
            android:text="Do you charge tax?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_marginStart="@dimen/page"
            android:layout_marginEnd="@dimen/page"
            style="@style/primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let us know if you ever charge tax on your products or services, and we'll help you set a default rate."
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView4"
            android:onClick="@{() -> fragment.setTax(true)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="Yes"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/view1"
            android:layout_marginStart="@dimen/page"
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView4" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView5"
            android:onClick="@{() -> fragment.setTax(false)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page"
            app:layout_constraintTop_toBottomOf="@+id/view1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="No"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_marginStart="@dimen/page"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView5"
            tools:layout_editor_absoluteX="26dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
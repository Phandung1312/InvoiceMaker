<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1373dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/viewHeaderEstimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/viewHeaderAddEstimate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/viewTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/closeImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ic_close"
                        app:tint="@color/blue_button" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/page"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/previewTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_tight_semi_bold"
                            android:text="@string/preview"
                            android:textColor="@color/blue_button"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/SaveTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/inter_tight_semi_bold"
                            android:text="@string/save"
                            android:textColor="@color/blue_button"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>
                </RelativeLayout>


                <TextView
                    android:id="@+id/dateTextView"
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewTop"
                    android:layout_marginStart="@dimen/page"
                    android:text="15Aug" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateTextView"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_tight_semi_bold"
                        android:text="Estimate 1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/viewHeaderEstimate">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#F6F7FA"
                android:orientation="vertical">

                <TextView
                    style="@style/titleHeaderMoreH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/page"
                    android:fontFamily="@font/inter_tight_semi_bold"
                    android:text="@string/bill_to" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewClickAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <ImageView
                            android:id="@+id/iconAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/page"
                            android:src="@drawable/ic_user_square" />

                        <TextView
                            style="@style/titleHeaderMoreH2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_toEndOf="@+id/iconAdd"
                            android:text="Add client" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/titleHeaderMoreH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/page"
                    android:fontFamily="@font/inter_tight_semi_bold"
                    android:text="ITEMS" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewClickItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <ImageView
                            android:id="@+id/imagePlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/page"
                            android:src="@drawable/ic_pluscircle" />

                        <TextView
                            style="@style/titleHeaderMoreH2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_toEndOf="@+id/imagePlus"
                            android:text="Add items" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page"
                    android:elevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/titleHeaderMoreH2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/page"
                                android:text="@string/subtotal" />

                            <TextView
                                android:id="@+id/subTotalValueTextview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/page"
                                android:text="0 d" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/gray_line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/titleHeaderMoreH2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/page"
                                android:text="@string/discount" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/page"
                                android:src="@drawable/ic_right" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page"
                    android:elevation="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1">

                        <TextView
                            style="@style/titleHeaderMoreH2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/page"
                            android:text="Total" />

                        <TextView
                            android:id="@+id/totalValueTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/page"
                            android:text="0 d" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    style="@style/titleHeaderMoreH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/page"
                    android:fontFamily="@font/inter_tight_semi_bold"
                    android:text="DUE DATE" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">


                        <TextView
                            style="@style/titleHeaderMoreH2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/page"
                            android:text="@string/same_day" />

                        <TextView
                            android:id="@+id/dayTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/page"
                            android:textColor="@color/blue_button" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    style="@style/titleHeaderMoreH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/page"
                    android:fontFamily="@font/inter_tight_semi_bold"
                    android:text="@string/payment_methods" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                    <LinearLayout
                        android:layout_marginStart="@dimen/page"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/icon_paypal"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"/>
                        <TextView
                            android:text="PayPal"
                            android:layout_gravity="center_vertical"
                            style="@style/titleHeaderMoreH2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@drawable/ic_info"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>
                    </LinearLayout>
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </androidx.appcompat.widget.SwitchCompat>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/titleHeaderMoreH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/page"
                    android:layout_marginTop="@dimen/page"
                    android:fontFamily="@font/inter_tight_semi_bold"
                    android:text="OTHER" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/inputText"
                            android:layout_margin="@dimen/page"
                            android:hint="Comments appear at the bottom of your\n estimate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"/>
                       <TextView
                           style="@style/titleHeaderMoreH2"
                           android:layout_below="@+id/inputText"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentEnd="true"
                           android:text="5000"
                           android:layout_marginEnd="@dimen/page"
                           android:id="@+id/countCharacterText"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



               <androidx.cardview.widget.CardView
                   android:elevation="@dimen/_8sdp"
                   android:layout_marginTop="@dimen/page"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_40sdp">

                   </RelativeLayout>

               </androidx.cardview.widget.CardView>





            </LinearLayout>


        </ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
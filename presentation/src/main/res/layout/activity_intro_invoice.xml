<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.bravo.invoice.ui.create_invoice.IntroInvoiceActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.create_invoice.IntroInvoiceActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:src="@drawable/invoice_template"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            style="@style/medium_text_header_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_tight_semi_bold"
            android:text="Make it unique,\n professional, yours"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView10"
            style="@style/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Take a glimpse at your invoice layout - yet this is only the beginning. Customize it with a logo, watermark, color palette, formatting, and beyond"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <include
            android:id="@+id/btn_get_started"
            android:onClick="@{() -> activity.onGetStarted()}"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/page"
            android:layout_marginEnd="@dimen/page"
            layout="@layout/button_blue_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_explore"
            app:textButton="@{`Get Started with invoicing`}" />

        <include
            android:id="@+id/btn_explore"
            android:onClick="@{() -> activity.onExplore()}"
            android:layout_marginBottom="@dimen/page"
            android:layout_marginStart="@dimen/page"
            android:layout_marginEnd="@dimen/page"
            layout="@layout/button_alphablue_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:textButton="@{`Explore the app`}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
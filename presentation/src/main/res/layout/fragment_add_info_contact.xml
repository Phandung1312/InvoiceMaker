<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="AddInfoContactProject">

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_addClient">


        <RelativeLayout
            android:id="@+id/viewHeaderAddInfoContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cancelTextView"
                style="@style/medium_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                android:layout_marginBottom="@dimen/page"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/addClientTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/inter_tight_bold"
                android:text="@string/add_client"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />


            <TextView
                android:id="@+id/saveTextView"
                style="@style/medium_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/page"
                android:layout_marginTop="@dimen/page"
                android:layout_marginEnd="@dimen/page"
                android:layout_marginBottom="@dimen/page"
                android:text="@string/save"
                android:textColor="@color/color_textGray" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewHeaderAddInfoContact">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewChooseContactsProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="@dimen/_4sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inter_tight_bold"
                            android:text="@string/choose_from_contacts"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/_14ssp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_marginTop="@dimen/_20sdp"
                   app:layout_constraintTop_toBottomOf="@+id/viewChooseContactsProject"
                   android:elevation="@dimen/_8sdp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:id="@+id/viewInput1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@color/white"
                       android:orientation="vertical"
                       android:weightSum="4">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical">

                           <TextView
                               android:id="@+id/givenNameTextview"
                               style="@style/primary_text"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginStart="@dimen/page"
                               android:text="Given name(s)" />

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1">

                               <EditText
                                   android:id="@+id/givenNameEdt"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginStart="@dimen/_20sdp"
                                   android:background="@null"
                                   android:fontFamily="@font/inter_tight_light"
                                   android:hint="Active"
                                   android:textColorHint="@color/color_hint_edt"
                                   android:textSize="@dimen/_10sdp" />

                               <ImageView
                                   android:id="@+id/emptyImg"
                                   android:layout_centerVertical="true"
                                   android:layout_alignParentEnd="true"
                                   android:layout_marginEnd="@dimen/page"
                                   android:visibility="gone"
                                   android:src="@drawable/ic_empty"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>

                               <View
                                   android:layout_width="match_parent"
                                   android:layout_height="1dp"
                                   android:layout_below="@+id/givenNameEdt"
                                   android:layout_marginStart="@dimen/_20sdp"
                                   android:layout_marginTop="@dimen/_10sdp"
                                   android:background="@color/gray_line" />
                           </RelativeLayout>







                       </LinearLayout>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">

                           <TextView
                               android:id="@+id/surNameTextview"
                               style="@style/primary_text"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:text="Surname" />

                           <EditText
                               android:id="@+id/surNameEdt"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_below="@+id/surNameTextview"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:background="@null"
                               android:fontFamily="@font/inter_tight_light"
                               android:hint="Smith"
                               android:inputType="phone"
                               android:textColorHint="@color/color_hint_edt"
                               android:textSize="@dimen/_10sdp" />

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_below="@+id/surNameEdt"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:background="@color/gray_line" />
                       </RelativeLayout>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">

                           <TextView
                               android:id="@+id/mobileTextView"
                               style="@style/primary_text"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:text="Mobile" />

                           <EditText
                               android:id="@+id/phoneEdt"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_below="@+id/mobileTextView"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:background="@null"
                               android:inputType="phone"
                               android:fontFamily="@font/inter_tight_light"
                               android:hint="Number"
                               android:textColorHint="@color/color_hint_edt"
                               android:textSize="@dimen/_10sdp" />

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_below="@+id/phoneEdt"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:background="@color/gray_line" />
                       </RelativeLayout>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">

                           <TextView
                               android:id="@+id/emailTextView"
                               style="@style/primary_text"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:text="Email" />

                           <EditText
                               android:id="@+id/emailEdt"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_below="@+id/emailTextView"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:background="@null"
                               android:fontFamily="@font/inter_tight_light"
                               android:hint="henry@gmail.com"
                               android:inputType="textEmailAddress"
                               android:textColorHint="@color/color_hint_edt"
                               android:textSize="@dimen/_10sdp" />

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_below="@+id/emailEdt"
                               android:layout_marginStart="@dimen/_20sdp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:background="@color/gray_line" />
                       </RelativeLayout>
                       <RelativeLayout
                           android:id="@+id/viewRole"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/_50sdp"
                           android:layout_weight="1">
                           <TextView
                               android:id="@+id/addAnotherEmail"
                               style="@style/primary_text"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:layout_marginStart="@dimen/page"
                               android:text="Role" />

                           <ImageView
                               android:layout_alignParentEnd="true"
                               android:src="@drawable/ic_right"
                               android:layout_centerVertical="true"
                               android:layout_marginEnd="@dimen/page"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                       </RelativeLayout>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
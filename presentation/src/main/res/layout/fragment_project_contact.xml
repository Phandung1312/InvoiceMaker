<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="DetailProjectContacts">

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F7FA">

        <androidx.cardview.widget.CardView
            android:id="@+id/viewHeaderProjectContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/white"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/backTextView"
                        style="@style/medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/page"
                        android:layout_marginTop="@dimen/page"
                        android:layout_marginEnd="@dimen/page"
                        android:layout_marginBottom="@dimen/page"
                        android:text="@string/back"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/addClientTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:fontFamily="@font/inter_tight_bold"
                        android:text="@string/project_contact"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />


                    <ImageView
                        android:id="@+id/imagePlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/page"
                        android:layout_marginTop="@dimen/page"
                        android:layout_marginEnd="@dimen/page"
                        android:layout_marginBottom="@dimen/page"
                        android:src="@drawable/ic_plus" />

                </RelativeLayout>
        </androidx.cardview.widget.CardView>
  <androidx.constraintlayout.widget.ConstraintLayout
      app:layout_constraintTop_toBottomOf="@+id/viewHeaderProjectContact"
      android:layout_marginTop="@dimen/_100sdp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <RelativeLayout
          android:id="@+id/viewDoubleTitle"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/textClient"
              android:layout_centerHorizontal="true"
              android:gravity="center_horizontal"
              android:textColor="#6D7081"
              android:text="@string/client"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/nameClientTextView"
              android:layout_below="@+id/textClient"
              android:text="@string/company_name"
              android:layout_width="wrap_content"
              style="@style/primary_text"
              android:textSize="@dimen/_25sdp"
              android:gravity="center_horizontal"
              android:layout_centerHorizontal="true"
              android:layout_height="wrap_content"/>

      </RelativeLayout>

      <ImageView
          android:id="@+id/img_contact"
          app:layout_constraintTop_toBottomOf="@+id/viewDoubleTitle"
          android:layout_width="@dimen/_150sdp"
          android:layout_height="@dimen/_150sdp"
          android:layout_marginTop="@dimen/_60sdp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:src="@drawable/ic_company"/>

      <include
          android:id="@+id/button_addNewContact"
          layout="@layout/button_blue_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginBottom="@dimen/_80sdp"
          android:layout_marginStart="@dimen/page"
          android:layout_marginEnd="@dimen/page"
          app:textButton="@{`Add new contact`}" />
  </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
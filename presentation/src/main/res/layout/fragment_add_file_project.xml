<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="AddFileClass">
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#F6F7FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:id="@+id/viewHeaderNameProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/viewHeaderAddEstimate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/viewTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/closeImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/blue_button" />

                <ImageView
                    android:id="@+id/imgMenu"
                    android:src="@drawable/ic_menu"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/nameProjectTextview"
                android:layout_below="@+id/viewTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page"
                android:fontFamily="@font/inter_tight_semi_bold"
                android:text="Name Project"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp" />
            <TextView
                android:id="@+id/nameClient"
                style="@style/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameProjectTextview"
                android:layout_marginStart="@dimen/page"
                android:text="15Aug" />








        </RelativeLayout>
    </androidx.cardview.widget.CardView>


  <androidx.constraintlayout.widget.ConstraintLayout
      app:layout_constraintTop_toBottomOf="@+id/viewHeaderNameProject"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="@dimen/page"
      android:layout_width="match_parent"
      android:background="@color/white"
      android:layout_height="0dp">


      <LinearLayout
          android:id="@+id/viewGroupProject"
          app:layout_constraintTop_toTopOf="parent"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


          <RelativeLayout
              android:id="@+id/viewProjectContact"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40sdp"
              android:layout_marginTop="@dimen/_10sdp">

              <TextView
                  style="@style/titleHeaderMoreH2"
                  android:layout_marginStart="@dimen/page"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_centerVertical="true"
                  android:text="Project contacts" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/page"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:src="@drawable/ic_right" />
          </RelativeLayout>
          <View
              android:id="@+id/view7"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_width="match_parent"
              android:layout_marginStart="@dimen/page"
              android:layout_height="1dp"
              android:background="@color/gray_line"/>
          <RelativeLayout
              android:id="@+id/viewProjectDetails"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40sdp"
              android:layout_marginTop="@dimen/_10sdp">

              <TextView
                  style="@style/titleHeaderMoreH2"
                  android:layout_marginStart="@dimen/page"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_centerVertical="true"
                  android:text="Project details" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="@dimen/page"
                  android:layout_centerVertical="true"
                  android:src="@drawable/ic_right" />
          </RelativeLayout>
          <View
              android:id="@+id/view8"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_marginStart="@dimen/page"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gray_line"/>
          <RelativeLayout
              android:id="@+id/viewNotes"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40sdp"
              android:layout_marginTop="@dimen/_10sdp">

              <TextView
                  style="@style/titleHeaderMoreH2"
                  android:layout_marginStart="@dimen/page"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_centerVertical="true"
                  android:text="Notes" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="@dimen/page"
                  android:layout_centerVertical="true"
                  android:src="@drawable/ic_right" />
          </RelativeLayout>
          <View
              android:id="@+id/view9"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_width="match_parent"
              android:layout_marginStart="@dimen/page"
              android:layout_height="1dp"
              android:background="@color/gray_line"/>

      </LinearLayout>


      <TextView
          android:id="@+id/textProjectFiles"
          app:layout_constraintTop_toBottomOf="@+id/viewGroupProject"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="@dimen/page"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/page"
          android:fontFamily="@font/inter_tight_semi_bold"
          android:text="Project files"
          android:textColor="@color/black"
          android:textSize="@dimen/_20sdp" />


      <ImageView
          app:layout_constraintTop_toBottomOf="@+id/textProjectFiles"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toTopOf="@+id/button_Addfile"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="@dimen/page"
          android:src="@drawable/ic_bgaddfiles"
          android:layout_width="@dimen/_120sdp"
          android:layout_height="0dp"/>


      <include
          android:id="@+id/button_Addfile"
          layout="@layout/button_blue_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/page"
          android:layout_marginEnd="@dimen/page"
          android:layout_marginBottom="@dimen/_30sdp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:textButton="@{`Add file`}" />

  </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
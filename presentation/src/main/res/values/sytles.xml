<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primary_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/secondTextSize</item>
    </style>

    <style name="primary_title_set_up_screen">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_tight_bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="medium_blue">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:fontFamily">@font/inter_tight_medium</item>
        <item name="android:textSize">@dimen/secondTextSize</item>
    </style>

    <style name="medium_black">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/inter_tight_medium</item>
        <item name="android:textSize">@dimen/secondTextSize</item>
    </style>


    <style name="more_info_text">
        <item name="android:textColor">@color/more_info</item>
        <item name="android:textSize">@dimen/tertiaryTextSize</item>
    </style>

    <style name="error_text">
        <item name="android:textColor">@color/error_text</item>
        <item name="android:textSize">@dimen/tertiaryTextSize</item>
    </style>

    <style name="medium_text_header_blue">
        <item name="android:fontFamily">@font/inter_tight_bold</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/headerBlueTextSize</item>
    </style>

    <style name="bold_text_titleAddClient">
        <item name="android:fontFamily">@font/inter_tight_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/secondTextSize</item>
    </style>

    <style name="titleHeaderMoreH1">
        <item name="android:fontFamily">@font/inter_tight_light</item>
        <item name="android:textColor">#6D7081</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="titleHeaderMoreH2">
        <item name="android:fontFamily">@font/inter_tight_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="BottomNavigationTextInactive">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="BottomNavigationTextActive">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="top_center_title_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_tight_semi_bold</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>






</resources>